pipeline {
    agent any  // This line tells Jenkins to use any available agent to run the pipeline

    stages {
        stage('Build') {  // Define a stage named 'Build'
            steps {  // Steps to be executed within the 'Build' stage
                echo 'Building the application...'  // Print a message to the Jenkins console
                // Here you would add commands to compile/build your application, for example:
                // sh 'mvn clean package'  // Uncomment this line if using Maven for Java projects
            }
        }

        stage('Test') {  // Define a stage named 'Test'
            steps {
                echo 'Running tests...'  // Print a message to the Jenkins console
                // Add commands to run your test cases, for example:
                // sh 'mvn test'  // Uncomment this line if using Maven for Java projects
            }
        }

        stage('Deploy') {  // Define a stage named 'Deploy'
            steps {
                echo 'Deploying the application...'  // Print a message to the Jenkins console
                // Add commands to deploy your application, for example:
                // sh 'scp target/myapp.jar user@server:/path/to/deploy'  // Example deployment command
            }
        }
    }

    post {  // Post actions to be taken after the pipeline stages have completed
        success {
            echo 'Pipeline completed successfully!'  // Print a message if the pipeline was successful
        }
        failure {
            echo 'Pipeline failed!'  // Print a message if the pipeline failed
        }
    }
}
